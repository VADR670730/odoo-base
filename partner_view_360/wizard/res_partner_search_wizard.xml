         <record id="search_jobseeker_form" model="ir.ui.view">
        <field name="name">search.jobseeker.wizard</field>
        <field name="model">res.partner.jobseeker.search.wizard</field>
        <field name="arch" type="xml"> 
            <form string="Search Partner">
                <group>
                    <field name="reason_or_id" widget="radio" options="{'horizontal': true}"/>
                    <field name="search_reason" attrs="{'invisible': [('reason_or_id','!=','reason')]}"/> <!--widget="radio" options="{'horizontal': true}"-->
                    <field name="identification" attrs="{'invisible': [('reason_or_id','!=','id')]}"/>
                    <field name="search_domain" widget="domain" options="{'model' : 'res.partner'}" attrs="{'invisible': [('search_reason','=',False), ('identification', '=', False)]}"> </field>

                </group>
                <div style="min-height:25em;"> </div>
                <group></group>
                <footer>
                    <button name="search_jobseeker" string="search" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="search_jobseeker_wizard"
            name="Search Partner"
            src_model="res.partner"
            res_model="res.partner.jobseeker.search.wizard"
            view_mode="form"
            target="new" 
            key2="client_action_multi"/> <!-- target="current"/"main"-->

   <menuitem id="res_partner_jobseeker_search_wizard_menu"
        name="Search Jobseekers"
        action="search_jobseeker_wizard" 
        sequence="3"/>

</odoo>